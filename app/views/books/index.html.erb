<body>
  <div class="inidex">
    
    <%= flash[:success] %>
    <h1 class="index-heading">Books</h1>
    <div class="table">
      <div class="table-headings">
        <p class="table-heading">Title</p>
        <p class="table-heading">Body</p>
        <p class="table-heading"></p>
      </div>
  
      <% @books.each do |book| %>
      <div class="record">
        <p class="record-title"><%= book.title %></p>
        <p class="record-body"><%= book.body %></p>
        <p class="record-link">
          <%= link_to "Show", show_book_path(book.id) %>
          <%= link_to "Edit", edit_book_path(book.id) %>
          <%= link_to 'Destroy', destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %>
        </p>
      </div>
      <% end %>
    </div>
  </div>

  <div class="new">
    <h2>New book</h2>
    <% if @book.errors.any? %>
      <%= @book.errors.count %> errors prohibited this book from being saved:
      <% @book.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
    <% end %>
    <%= form_with model:@book, url:'/books', local:true do |f| %>
      <p class="new-title">Title</p>
      <%= f.text_field :title %>
      <p class="new-body">Body</p>
      <%= f.text_area :body %>
      <p>
        <%= f.submit ' Create Book ' %>
      </p>
    <% end %>
  </div>

</body>